#!/bin/bash

sname=$1
scratchdir="/scratch/g/g260078/schism-results"
workdir="/work/gg0877/hofmeist/nwshelf"

swd=$workdir/$sname
mkdir -p $swd

mkdir -p $swd/log
cp $scratchdir/$sname/*.* $swd/log

files=$(cd $scratchdir/$sname/outputs;ls *.nc)
i=0
for file in $files ; do
  echo $i $file
  cp $scratchdir/$sname/outputs/$file $swd &
  ((i++))
  if [ "$i" == "36" ] ; then
    wait
    i=0
  fi
done
wait

